extends layout

block content
	h2.page-header Delete Book
	p Please delete a book using the form below
	ul.errors
		if errors
			each error, i in errors
				li.alert.alert-danger #{error.msg} 
		
			
	form(method='POST', action ='/users/deleteBook', enctype='multipart/form-data')
		.form-group
			label Name
			input.form-control(name='name',type='text', placeholder='Enter Book Name')
		.form-group
			label Email
			input.form-control(name='email',type='email', placeholder='Enter email of the person')
		
		
		input.btn.btn-primary(type='submit', name='submit', value='Delete') 
	<br></br>
	
	
		

		