extends layout

block content
	h2.page-header Register Book
	p Please add a book using the form below
	ul.errors
		if errors
			each error, i in errors
				li.alert.alert-danger #{error.msg} 
	form(method='POST', action ='/users/addBook', enctype='multipart/form-data')
		.form-group
			label Name
			input.form-control(name='name',type='text', placeholder='Enter Book Name')
		.form-group
			label Author
			input.form-control(name='nameAuthor',type='text', placeholder='Enter Author Name')
		.form-group
			label Username
			input.form-control(name='username',type='text', placeholder='Enter your user name')
		.form-group
			label Email
			input.form-control(name='email',type='email', placeholder='Enter your email')
		input.btn.btn-primary(type='submit', name='submit', value='Submit Book') 



		